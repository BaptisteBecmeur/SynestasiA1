<%= link_to icon('reply') + " Back", { controller: "answers" , action: "index"}, class: "btn btn-primary"  %>
<h1 class="text-center">Edit  <%= @answer.name %></h1>
<div class="row">
  <div class="col-lg-6 col-md-12 col-sm-12 form-group">
    <%= cl_image_tag(@answer.picture, :width => 200, :height => 200, :crop => :thumb, :gravity => :face, :radius => :max, class: "img-circle") %>
    <%= render 'answer_form' %>

    <h3>Assignate a new question</h3>
    <%= simple_form_for [ @answer, @question ] do |f| %>
    <%= f.input :picture, label: icon('picture-o')+" Picture", label_html: { class: 'btn btn-primary' } %>
    <%= f.button :submit , class: "btn-info btn-block" %>
    <% end %>
  </div>
  <div class="col-lg-6 col-md-12 col-sm-12 form-group">
    <% @questions.each do |question|  %>
      <div class="form-group">
        <%= cl_image_tag(question.picture, class: "img-responsive img-thumbnail") %>
        <%= link_to icon('trash') + " Remove question", question_path(question) , method: :delete , class: "btn btn-danger btn-block" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 form-group">
    <%= link_to icon('trash') + " Remove "+@answer.name, answer_path(@answer.id) , method: :delete , class: "btn btn-danger btn-block" %>
  </div>
</div>
